- next_prediction, then_predictions = predictions.first, predictions[1,4]
.prediction{ data: {line: line}, class: ('due' if due?(next_prediction)) }
  .line
    .line-name= line
  .next
    .time= link_to next_label_for(next_prediction), london_trip_path(next_prediction.trip_id)
  .then
    - then_predictions.each do |then_prediction|
      .time= then_label_for then_prediction

