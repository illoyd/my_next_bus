- cache @form do
  %h1 Find a stop

  = form_tag( london_stops_path, method: :get, class: 'search', role: 'form' ) do |f|
    .group
      = label_tag :stop, 'Enter a stop ID'
      = telephone_field_tag :stop, nil, placeholder: "Example: 72350", autofocus: true
    .group
      = submit_tag 'Go!'

- if @stops.stops.any?
  = render partial: 'stops', object: @stops.stops.reject{ |s| s.code1.nil? }, locals: { title: 'Nearby stops for you', hide_if_empty: false, latitude: params[:lat], longitude: params[:lon] }

- unless signed_in?
  = render partial: 'sign_in_form'
